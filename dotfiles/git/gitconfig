[core]
    editor = nvim
    excludesfile = ~/.config/git/ignore
    pager = delta
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    new = green bold
[color "branch"]
    current = yellow bold
    local = white
    remote = red
[log]
    date = relative
[init]
    defaultBranch = main
[fetch]
    prune = true
[pull]
    rebase = true
[rebase]
    autoStash = true
[format]
    pretty = format:%C(yellow)%h %C(cyan)%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s
[pager]
    log = delta
    diff = delta
    show = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    light = false
    syntax-theme = Monokai Extended
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[alias]
    br = branch
    bra = branch --all
    brd = branch --delete
    ci = commit
    co = checkout
    df = diff --color-words='[^[:space:]]'
    fap = fetch --all --prune
    graph = log --graph --oneline --decorate=short --branches='*'
    g = "!git-graph"
    l = "!git-fancy-log"
    logall = "!git-logall"
    sh = show --color-words='[^[]]'
    st = "!git-st"
[include]
    path = ~/.gitconfig.local
